
    static void C(int t) {

        sum = 0L;

        for (int i = 1; i < n; i += 2) {

            long _sum = Long.parseLong(sum(a[i - 1] + "", (i + 1 >= n ? 0 : a[i + 1]) + ""));

            if (isSmaller(a[i] + "", _sum + "")) {

                sub = Long.parseLong(sub(_sum + "", a[i] + ""));

                sum = Long.parseLong(sum(sum + "", sub + ""));

                if (i + 1 < n) {

                    a[i + 1] = Math.max(a[i] - a[i - 1], 0L);

                }

            }

        }

        ans.append(sum);

        if (t != testCases) {

            ans.append("\n");

        }

    }

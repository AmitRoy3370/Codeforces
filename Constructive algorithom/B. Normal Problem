StringBuilder sb = new StringBuilder();

        for (int i = n - 1; i >= 0; --i) {

            switch (x[i]) {
                case 'p' ->
                    sb.append('q');
                case 'q' ->
                    sb.append('p');
                default ->
                    sb.append('w');
            }

        }

        ans.append(sb.toString().trim());
